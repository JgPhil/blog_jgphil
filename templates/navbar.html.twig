{% set route_name = app.request.attributes.get('_route') %}


<nav class="navbar navbar-expand-lg navbar-dark fixed-top ">

	<a class="navbar-brand" href={{ path('home') }}>
		<img src="{{ asset('img/logo.png') }}" alt="logo"/>
	</a>

	<button type="button" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#navbar" aria-haspopup="true" aria-expanded="false" aria-controls="navbar">
		<span class="navbar-toggler-icon"></span>
	</button>


	<div id="navbar" class="collapse navbar-collapse">

		<ul class="navbar-nav ml-auto">

			<li {% if route_name == "home" %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
				<a class="nav-link" href="{{ path('home') }}">
					Accueil
				</a>
			</li>
			<li {% if route_name == "post_list" %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
				<a class="nav-link" href="{{ path('post_list') }}">
					Articles
				</a>
			</li>

			{% if app.user %}

				<li {% if route_name == "admin" %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
					<a class="nav-link" href="">
						Administration
					</a>
				</li>
			{% endif %}

			{% if not app.user %}
				<li {% if route_name == "app_login" %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
					<a class="nav-link" href="{{ path('app_login') }}">
						Se connecter
					</a>
				</li>
			{% else %}

				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_logout') }}">
						Se d√©connecter
					</a>
				</li>

			{% endif %}

		</ul>

	</div>
	<!--/.nav-collapse -->
</nav>
