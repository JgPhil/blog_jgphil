{% extends 'base.html.twig' %}

{% block title %}
	{{post.title}}
{% endblock %}


{% block body %}

	<h1 class="display-5 font-weight-bold text-center my-4">
		{{post.title}}
	</h1>

	<h3>{{post.title}}</h3>
	Ajout√© le
	<h4>{{post.createdAt|date('d/m/Y') }}
		ID:
		{{post.id}}
	</h4>
	<p>{{post.description}}</p>
	{% if app.user %}
		<a class="btn btn-primary" href="{{ path('post_update', {id:post.id}) }}">Modifier</a>
		<a class="btn btn-primary" href="{{ path('post_desactivate', {id:post.id}) }}">Supprimer</a>
	{% endif %}
{% endblock %}
