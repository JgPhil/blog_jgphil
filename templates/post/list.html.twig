{% extends 'base.html.twig' %}

{% block title "Tous les articles"%}


{% block body %}

	<h1 class="display-5 font-weight-bold text-center my-4">
		Tous les articles
	</h1>

	{% if app.user %}
		<div class="button new_post_btn">
			<a class="btn btn-primary" href="{{ path('post_new') }}">Nouvel article</a>
		</div>
	{% endif %}

	<div class="posts row">

		{% for post in posts %}
			<div class="container">
				<div class="row justify-content-center">
					<div class="one_post panel-group col-xs_12">
						<div class="panel panel-default mb-4 ">
							<div class="panel-heading  text-center">
								<h4 class="panel-title">
									<a data-toggle="collapse" href={{"#collapse" ~ post.id}}>{{post.title}}</a>
								</h4>
							</div>

							<div id={{"collapse" ~ post.id}} class="panel-collapse collapse">
								<a href="{{ path( 'post_show', { id: post.id } ) }}">
									{{ post.title }}
								</a>
								<div class="panel-body">
									<div class="card-body">
										<div class="row ">
											<h5 class="col-7">
												<a href="{{ path( 'post_show', { id: post.id } ) }}">
													{{ post.title }}
												</a>
											</h5>

											{% if app.user %}
												<div class="col-5">
													<a href="{{ path('post_update', { id: post.id }) }}" class="p-1">
														<i class="fas fa-pencil-alt fa-2x"></i>
													</a>
													<a href="{{ path('post_desactivate', { id: post.id }) }}" onclick="return confirm('Êtes-vous certain de vouloir désactiver cet article ?')" class="p-1" data-delete>
														<i class="fas fa-trash-alt fa-2x"></i>
													</a>
												</div>
											{% endif %}
										</div>
									</div>
								</div>
							{% endif %}

						</div>


					</div>
				</div>
			</div>

		{% endfor %}

	</div>

{% endblock %}
