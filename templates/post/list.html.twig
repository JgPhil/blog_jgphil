{% extends 'base.html.twig' %}

{% block title "Tous les articles"%}


{% block body %}

	<h1 class="display-5 font-weight-bold text-center my-4">
		Tous les articles
	</h1>

	{% if app.user %}
		<div class="button new_post_btn">
			<a class="btn btn-primary" href="{{ path('post_new') }}">Nouvel article</a>
		</div>
	{% endif %}

	<div class="posts container">
		<div class="row justify-content-center">

			{% for post in posts %}
				<div class="one_post col-xs-12 col-xl-6">
					<div
						class="card mb-4">


						{# 
																		<div id={{"collapse" ~ post.id}} class="panel-collapse collapse"> #}
						<a href="{{ path( 'post_show', { id: post.id } ) }}">
							<img class="card-img-top" src="{{ '/img/' ~ post.pictures.first.name|default('../img/default-image.png') }}" alt="Une image de l'article ">
						</a>
						<div class="card-body">
							<div class="row ">
								<p>{{post.description|u.truncate(30)}}
								</p>
								<h4 class="card-title text-center">
									<a data-toggle="collapse" href={{"#collapse" ~ post.id}}>{{post.title}}</a>
								</h4>

								{% if app.user %}
									<div class="col-5">
										<a href="{{ path('post_update', { id: post.id }) }}" class="p-1">
											<i class="fas fa-pencil-alt fa"></i>
										</a>
										<a href="{{ path('post_desactivate', { id: post.id }) }}" onclick="return confirm('Êtes-vous certain de vouloir désactiver cet article ?')" class="p-1" data-delete>
											<i class="fas fa-trash-alt fa"></i>
										</a>
									</div>
								{% endif %}
							</div>
						</div>
						{# </div> #}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
